@model IEnumerable<Parking_Zone.ViewModels.ParkingZone.ParkingZoneListItemVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Parking Zones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New <i class="bi bi-plus-square-fill"></i></a>
</p>
@foreach (var item in Model)
{
    <div class="card text-center">
        <div class="card-header" style="background-color:azure">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">@item.Name, @item.Address</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="nav-link text-dark">Edit <i class="bi bi-pencil-fill"></i></a>
                </li>
                <li class="nav-item">
                    <a asp-action="Details" asp-route-id="@item.Id" class="nav-link text-dark">Details <i class="bi bi-info"></i></a>
                </li>
                <li class="nav-item">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="nav-link" style="color:black; background-color:transparent;" onmouseover="this.style.backgroundColor='red'" onmouseout="this.style.backgroundColor='transparent'">Delete <i class="bi bi-trash-fill"></i></a>
                </li>
            </ul>
        </div>
        <div class="card-body text-xl-start">
            <h5 class="card-title">Number of total slots: @item.NumberOfAllSlots</h5>
            <p class="card-text">Slots in use: @item.SlotsInUse</p>
            <p class="card-text">Free Slots: @item.FreeSlots</p>
            <a asp-controller="ParkingSlot" asp-action="Index" asp-route-zoneId="@item.Id" class="btn btn-primary">Parking Slots <i class="bi bi-list"></i></a>
        </div>
    </div>
    <br />
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>