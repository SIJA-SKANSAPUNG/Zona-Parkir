@model IEnumerable<ReservationListItemVM>

@if (Model.Count() == 0)
{
    <h1>You havent made a reservation yet</h1>
}
else
{
    <h1>My reservations history</h1>
    <table class="table">
        <thead>
            <tr>
                <th>StartTime</th>
                <th>Duration</th>
                <th>Parking Zone</th>
                <th>Slot Number</th>
                <th>Vehicle Number</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class=@((item.IsActive) ? "table-success" : "table-danger")>
                    <td>@item.StartTime</td>
                    <td>@item.Duration</td>
                    <td>@item.ZoneName, @item.ZoneAddress</td>
                    <td>@item.SlotNumber</td>
                    <td>@item.VehicleNumber</td>
                </tr>
            }
        </tbody>
    </table>
}